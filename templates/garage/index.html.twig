{% extends 'base.html.twig' %}

{% block title %}Garage Index{% endblock %}

{% block body %}
    <div class="p-12">
        <h1 class="text-3xl font-bold mb-6">Garage Index</h1>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
                <thead>
                <tr class="bg-gray-100">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-600">Id</th>
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-600">Nom</th>
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-600">Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for garage in garages %}
                    <tr class="border-t border-gray-200">
                        <td class="px-6 py-4 text-sm text-gray-800">{{ garage.id }}</td>
                        <td class="px-6 py-4 text-sm text-gray-800">{{ garage.nom }}</td>
                        <td class="px-6 py-4 text-sm space-x-2">
                            <a href="{{ path('app_garage_show', {'id': garage.id}) }}" class="text-blue-500 hover:text-blue-700">Show</a>
                            <a href="{{ path('app_garage_edit', {'id': garage.id}) }}" class="text-green-500 hover:text-green-700">Edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="3" class="px-6 py-4 text-sm text-gray-800 text-center">No records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="mt-6">
            <a href="{{ path('app_garage_new') }}" class="bg-blue-500 text-white px-4 py-2 rounded-lg hover:bg-blue-700">Create new</a>
        </div>
    </div>
{% endblock %}
