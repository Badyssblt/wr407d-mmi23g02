{% extends 'base.html.twig' %}

{% block title %}Garage{% endblock %}

{% block body %}
    <div class="p-12">

        <div class="flex gap-4 items-end mb-6">
            <h1 class="text-3xl font-bold">Garage</h1>
            <div>
                {{ include('garage/_delete_form.html.twig') }}
            </div>
        </div>

        <div class="overflow-x-auto">
            <table class="min-w-full bg-white border border-gray-200 rounded-lg shadow-lg">
                <tbody>
                <tr class="border-t border-gray-200">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-600">Id</th>
                    <td class="px-6 py-4 text-sm text-gray-800">{{ garage.id }}</td>
                </tr>
                <tr class="border-t border-gray-200">
                    <th class="px-6 py-4 text-left text-sm font-medium text-gray-600">Nom</th>
                    <td class="px-6 py-4 text-sm text-gray-800">{{ garage.nom }}</td>
                </tr>
                </tbody>
            </table>
        </div>

        <div class="mt-6 flex space-x-4">
            <a href="{{ path('app_garage_index') }}" class="text-blue-500 hover:text-blue-700">Back to list</a>
            <a href="{{ path('app_garage_edit', {'id': garage.id}) }}" class="text-green-500 hover:text-green-700">Edit</a>
        </div>

    </div>
{% endblock %}
