{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}

{% for field in form %}
    <div class="mb-4">
        {{ form_label(field, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
        {{ form_widget(field, {'attr': {'class': 'mt-1 block w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-blue-500 focus:outline-none'}}) }}
        {{ form_errors(field, {'attr': {'class': 'text-sm text-red-500 mt-1'}}) }}
    </div>
{% endfor %}

<div class="mt-4">
    <button type="submit" class="w-full bg-blue-500 text-white px-6 py-3 rounded-md hover:bg-blue-600 transition duration-200">
        {{ button_label|default('Save') }}
    </button>
</div>

{{ form_end(form) }}
